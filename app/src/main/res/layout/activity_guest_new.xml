<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".guestNew"
    android:background="@drawable/eigth">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#00E676"
        android:textSize="40dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The code which is or will be given below is generated by the host who's service id you used"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_marginTop="80dp"
        android:textSize="23dp"></TextView>


    <TextView
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:hint="Code"
        android:textAlignment="center"
        android:textColor="#FF1744"
        android:textSize="50dp"></TextView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show that code to seurity person and he will match this to code sent him by Your Host"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_marginTop="290dp"
        android:textSize="23dp"></TextView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="400dp"
        android:onClick="btnlocation"
        android:text="Share and View Location"
        android:background="@drawable/btnformate"
        android:textColor="#fff"
        android:textAlignment="center">
        >
    </Button>

</RelativeLayout>